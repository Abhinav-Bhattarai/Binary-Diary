{
  "name": "server",
  "version": "1.0.0",
  "description": "Backend for Social Media app",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "ts-node-dev --respawn ./src/server.ts",
    "build": "tsc && npm start",
    "client": "cd ../client && npm start",
    "redis": "cd C:/Program Files/Redis && redis-cli",
    "dev": "concurrently \"npm run build\" \"npm run client\" \"npm run redis\""
  },
  "author": "Abhinav Bhattarai",
  "license": "MIT",
  "dependencies": {
    "async-redis": "^2.0.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.5.0",
    "json-web-token": "^3.2.0",
    "mongoose": "^5.12.12",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.12",
    "@types/node": "^15.6.1",
    "concurrently": "^6.2.0",
    "dotenv": "^10.0.0",
    "nodemon": "^2.0.7",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^1.1.6",
    "tslint": "^6.1.3",
    "typescript": "^4.3.2"
  }
}
